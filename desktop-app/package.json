{
  "name": "water-distribution-desktop",
  "version": "1.0.0",
  "description": "Desktop app for Water Distribution System",
  "main": "electron.js",
  "scripts": {
    "dev": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "vite --port 4002",
    "start:electron": "wait-on http://localhost:4002 && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@remix-run/router": "^1.3.0",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.4",
    "keytar": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^4.4.11",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.waterdistribution.system",
    "productName": "Water Distribution System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backend/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
